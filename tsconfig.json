{
    "compilerOptions": {
        "watch": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "api-route-interface" : ["./server/api/controllers/app-controller"]
        }
    },
    "files": [
        ".server/*.ts"
    ],
    "include": [
        "server/**/*.ts",
        "server/*.ts",
        "test/**/*.ts",
        "test/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": true
}